<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#464646"
    android:backgroundTint="#464646">


    <androidx.cardview.widget.CardView
        android:layout_width="346dp"
        android:layout_height="185dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#6F6F6F"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/sound"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-98dp"
                app:layout_constraintStart_toEndOf="@+id/usiatemplate"
                app:layout_constraintTop_toTopOf="@+id/Delete"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/mkn"
                android:layout_width="45dp"
                android:layout_height="49dp"
                app:layout_constraintEnd_toEndOf="@+id/sound"
                app:layout_constraintStart_toStartOf="@+id/sound"
                app:layout_constraintTop_toBottomOf="@+id/sound"
                app:srcCompat="@android:drawable/ic_menu_compass"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/NamaHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/amaranth"
                android:text="NamaHewan"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="@+id/cardView" />


            <TextView
                android:id="@+id/JenisHewan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/amaranth"
                android:text="Jenis Hewan"
                app:layout_constraintStart_toStartOf="@+id/NamaHewan"
                app:layout_constraintTop_toBottomOf="@+id/NamaHewan" />

            <TextView
                android:id="@+id/usiatemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/amaranth"
                android:text="Usia:              tahun"
                app:layout_constraintStart_toStartOf="@+id/JenisHewan"
                app:layout_constraintTop_toBottomOf="@+id/JenisHewan" />

            <TextView
                android:id="@+id/Usia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/amaranth"
                android:text="20"
                app:layout_constraintStart_toStartOf="@+id/usiatemplate"
                app:layout_constraintTop_toBottomOf="@+id/JenisHewan" />

            <Button
                android:id="@+id/Edit"
                android:layout_width="82dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#699372"
                android:text="EDIT"
                app:layout_constraintStart_toStartOf="@+id/usiatemplate"
                app:layout_constraintTop_toBottomOf="@+id/usiatemplate"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/Delete"
                android:layout_width="84dp"
                android:layout_height="47dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#cd5c5c"
                android:text="DEL"
                app:layout_constraintStart_toEndOf="@+id/Edit"
                app:layout_constraintTop_toTopOf="@+id/Edit"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sepi"
                        android:layout_width="176dp"
                        android:layout_height="174dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/sepi" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>